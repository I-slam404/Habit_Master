<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardElevation="4dp"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <!-- Habit Name TextView -->
        <TextView
            android:id="@+id/tvHabitName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habit Name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Habit Frequency TextView -->
        <TextView
            android:id="@+id/tvHabitFrequency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Frequency: Daily" />

        <!-- Habit Date TextView -->
        <TextView
            android:id="@+id/tvHabitDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: Not Set"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- New TextView for Date and Time of Task -->
        <TextView
            android:id="@+id/tvTaskDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task Date and Time:"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark" />

        <!-- Buttons Container (Complete and Delete Buttons) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:gravity="end"
            android:orientation="horizontal">

            <!-- Complete Button -->
            <Button
                android:id="@+id/btnComplete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Complete" />

            <View
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="5" />

            <!-- Delete Button -->
            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:background="@color/red"
                android:layout_weight="1"
                android:text="Delete" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
